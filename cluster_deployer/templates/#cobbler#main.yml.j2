---
# Default values suitable for a Vagrant environment

# settings
# WARNING: The default password is "changeme" fine for demo purposes
# but should be set to something more secure.
cobbler_default_password_crypted: {{ cobbler.cobbler_default_password_crypted }}
bound_interface: {{ cobbler.bound_interface }}

cobbler_get_loaders: true
cobbler_signature_update: true
cobbler_proxy_url_ext:
# dhcpd
cobbler_dhcp_listen_interfaces: {{ cobbler.cobbler_dhcp_listen_interfaces }}

# dhcp.template
subnets:
  - {
      cobbler_dhcp_subnet: {{ cobbler.subnet.cobbler_dhcp_subnet | default("10.0.2.0") }},
      cobbler_dhcp_netmask: 255.255.255.0,
      cobbler_dhcp_option_routers: {{ cobbler.subnet.cobbler_dhcp_option_routers | default("10.0.2.2")  }},
      cobbler_dhcp_option_domain_name_servers: {{ cobbler.subnet.cobbler_dhcp_option_domain_name_servers | default("10.0.2.2") }},
      cobbler_dhcp_option_subnet_mask: 255.255.255.0,
      cobbler_dhcp_dynamic_bootp_start: {{ cobbler.subnet.cobbler_dhcp_dynamic_bootp_start | default("10.0.2.100") }},
      cobbler_dhcp_dynamic_bootp_end: {{ cobbler.subnet.cobbler_dhcp_dynamic_bootp_end | default("10.0.2.254") }},
    }
# ubuntu repo
cobbler_manage_repo: true
cobbler_ubuntu_release: 14.04
cobbler_ubuntu_dependiences_fix: http://launchpadlibrarian.net/109052632/python-support_1.0.15_all.deb
cobbler_ubuntu_repo_url: "http://download.opensuse.org/repositories/home:/libertas-ict:/cobbler26/xUbuntu_{{ cobbler_ubuntu_release }}/"

# cobbler version
